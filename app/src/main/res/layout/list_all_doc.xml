<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2"
    android:id="@+id/fragment_replaceable"
    android:padding="10sp">

    <ImageView
        android:id="@+id/list_all_doc_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background"/>

    <LinearLayout
        android:paddingLeft="8sp"
        android:paddingTop="15sp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_all_doc_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor id"
            android:textSize="9sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/list_all_doc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Name"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/list_all_doc_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Specialization"
            android:textSize="12sp"/>

    <TextView
        android:id="@+id/list_all_doc_hosname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospital Name"
        android:textSize="12sp"/>

</LinearLayout>
</LinearLayout>